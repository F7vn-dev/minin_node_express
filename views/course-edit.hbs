<h1>Edit {{course.title}}</h1> 

<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field">
          <input id="title" name="title" type="text" class="validate" required value="{{course.title}}" >
          <label for="title">Имя курса</label>
          <span class="helper-text" data-error="Введите название"></span>
    </div>

    <div class="input-field">
          <input id="cost" type="number" name="cost" class="validate" required min="1" value="{{course.cost}}">
          <label for="cost">Цена</label>
          <span class="helper-text" data-error="Введите цену" ></span>
    </div>

    <div class="input-field">
          <input id="img" type="text" name="img" class="validate" required value="{{course.img}}">
          <label for="img">Url image</label>
          <span class="helper-text" data-error="wrong"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button class="btn btn-primary" type="submit">Edit Course</button>
</form>

<form action="/courses/remove" method="POST" >
      <input type="hidden" name="id" value="{{course.id}}">
      <button type="submit" class="btn red">Удалить курс</button>
</form>